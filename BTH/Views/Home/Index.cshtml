@model BMICalculator.Models.BMIModel

@{
    ViewData["Title"] = "Tính Chỉ Số BMI";
}

<h2>Tính Chỉ Số BMI</h2>

<!-- Form nhập cân nặng và chiều cao -->
<form asp-action="Index" method="post">
    <div>
        <label>Cân nặng (kg):</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div>
        <label>Chiều cao (m):</label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Tính BMI</button>
</form>

<!-- Kiểm tra và hiển thị kết quả -->
@if (ViewBag.BMI != null)
{
    <h3>Kết quả:</h3>
    <p>Chỉ số BMI: <strong>@ViewBag.BMI</strong></p>
    <p>Đánh giá: <strong>@ViewBag.Result</strong></p>
}